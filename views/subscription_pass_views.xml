<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Menu principal -->
        <menuitem id="menu_peage_subscription_root"
                  name="Péage Abonnements"
                  sequence="10"
                  web_icon="anpr_peage_subscription,static/description/icon.png"/>

        <!-- Action fenêtre (à déclarer AVANT d’être référencée) -->
        <record id="action_subscription_pass" model="ir.actions.act_window">
            <field name="name">Abonnés</field>
            <field name="res_model">anpr.subscription.pass</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p>Gérez les abonnements au péage ici.</p>
            </field>
        </record>

        <!-- Sous-menu : Abonnements -->
        <menuitem id="menu_peage_subscription_pass"
                  name="Abonnés"
                  parent="menu_peage_subscription_root"
                  sequence="1"
                  action="action_subscription_pass"/>

        <!-- Vue Formulaire -->
        <record id="view_subscription_pass_form" model="ir.ui.view">
            <field name="name">subscription.pass.form</field>
            <field name="model">anpr.subscription.pass</field>
            <field name="arch" type="xml">
                <form string="Abonnement Péage">
                    <group>
                        <field name="name"/>
                        <field name="plate"/>
                        <field name="vehicle_type"/>
                        <field name="balance"/>
                        <field name="cost_per_passage"/>
                    </group>
                </form>
            </field>
        </record>

        <!-- Vue Liste -->
        <record id="view_subscription_pass_list" model="ir.ui.view">
            <field name="name">subscription.pass.list</field>
            <field name="model">anpr.subscription.pass</field>
            <field name="arch" type="xml">
                <list string="Abonnements Péage">
                    <field name="name"/>
                    <field name="plate"/>
                    <field name="vehicle_type"/>
                    <field name="balance"/>
                    <field name="cost_per_passage"/>
                </list>
            </field>
        </record>
    </data>
</odoo>
